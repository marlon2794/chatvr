{% extends "base.html.twig" %}

{% block libraries %}

    <!--A-Frame shared-space component Library-->
    <script src="https://unpkg.com/aframe-particle-system-component@1.0.x/dist/aframe-particle-system-component.min.js"></script>

{% endblock %}

{% block title %}Space-vr{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="css/spacevr_style.css"/>
{% endblock %}

{% block body %}

    <a-scene>
        <!-- Particle system uses 'default' preset, setting custom colors. -->
        <a-entity  position="0 1.25 -1" particle-system="preset: rain; color: #EF0000,#44CC00"></a-entity>

        <a-entity class="elements" position="0 0 -5">
            <a-sphere position="0 1.25 -1" radius="1.25" color="#EF2D5E"></a-sphere>
            <a-box position="-1 0.5 1" rotation="0 45 0" width="1" height="1" depth="1"  color="#4CC3D9"></a-box>
            <a-cylinder position="1 0.75 1" radius="0.5" height="1.5" color="#FFC65D"></a-cylinder>
            <a-plane rotation="-90 0 0" width="4" height="4" color="#7BC8A4"></a-plane>
        </a-entity>

        <a-sky color="#000000"></a-sky>
    </a-scene>

    {% block javascripts %}{% endblock %}

{% endblock %}